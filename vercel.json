{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "functions": {
    "api/*.ts": {
      "maxDuration": 30
    }
  },
  "routes": [
    { "src": "/api/proxy", "dest": "/api/proxy.ts" },
    { "src": "/api/image", "dest": "/api/image.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
